    <h2>موقعي على Google Maps</h2>
    
    <div class="footer-col">
        <div class="googlemapdiv"></div>
    </div>

    <script>
        var gmfw_fired = false;

        window.addEventListener("scroll", function(){    
            if ((document.documentElement.scrollTop !== 0 && gmfw_fired === false) || 
                (document.body.scrollTop !== 0 && gmfw_fired === false)) {

                $(document).ready(function(){
                    var googleMapCustomData = `
                        <div class="google-maps">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3197.1045084838697!2d2.989378315490194!3d36.74406247855701!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x128fae275c6cf269%3A0x1d9b54d37e207a29!2sOnps!5e0!3m2!1sen!2sma!4v1645920960722!5m2!1sen!2sm" allowfullscreen></iframe>
                        </div>`;
                    $('.footer-col .googlemapdiv').append(googleMapCustomData);
                });

                gmfw_fired = true;
            }
        }, true);
    </script>

</body>
